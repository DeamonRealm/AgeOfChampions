<!-- Config file for the game -->

<config>
  
  <app framerate_cap="">
    <title>Age of Champions</title>
    <organization>Demon Realm</organization>

  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <font>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12"/>
  </font>

  <gui>
    <atlas file="gui/atlas.png"/>
    <background file="gui/Menu_background.png"/>
    <menu file="gui/Main_Menu.png"/>
    <standard file="gui/Standard_Match.png"/>
    <icons file="gui/UI_Icons.png"/>
    <hud file="gui/HUD.png"/>
    <champion file="gui/IU_Champions.png"/>
    <menu_pause file="gui/Menu_Pause.png"/>
	<final_menu file="gui/Menu_Final.png"/>
  </gui>
    
  <window>
    <resolution width="1366" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <input_manager>
    <key id ="F1" event ="enti_debug"/>
    <key id ="F2" event ="map_debug"/>
    <key id ="F3" event ="generate_villager"/>
    <key id ="T"  event ="generate_tree"/>
  </input_manager>
  
  <file_system>
    <path>data</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <scene>
  	<map_folder>TinyMap.tmx</map_folder>
  </scene>

  <animator>
    <civilization name="Teutones" folder="Teutones.xml"/>
  </animator>
  
</config>